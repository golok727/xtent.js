{
  "name": "xtent.js",
  "version": "0.0.0",
  "description": "A extension system for javascript",
  "author": "golok727",
  "license": "MIT",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "biome lint --write",
    "build": "pnpm type-check && pkgroll --minify",
    "type-check": "tsc --noEmit",
    "format": "biome format --write",
    "test:unit": "vitest --run",
    "lint:staged": "biome check --write --staged --no-errors-on-unmatched",
    "ci:lint": "biome ci --changed --no-errors-on-unmatched",
    "postinstall": "husky"
  },
  "keywords": ["extension-system", "plugins"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.9",
    "husky": "^9.1.6",
    "pkgroll": "^2.5.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "packageManager": "pnpm@9.12.0"
}
